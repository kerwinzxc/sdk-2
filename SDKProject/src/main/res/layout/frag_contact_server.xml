<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <RelativeLayout
        android:id="@+id/yun_sdk_rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/yun_sdk_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingBottom="6dip"
            android:paddingRight="8dip"
            android:paddingTop="6dip"
            android:textSize="16sp"
            android:drawableLeft="@drawable/icon_arrow_left"
            android:drawableTint="@color/yun_sdk_black"
            android:drawablePadding="8dp"
            android:textColor="@color/yun_sdk_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLength="8"
            android:text="联系客服"
            android:textColor="@color/yun_sdk_33"
            android:textSize="20sp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/yun_sdk_rl_top"
        android:layout_marginTop="25dp"
        android:gravity="left|center"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="微信公众号:"
            android:textColor="@color/yun_sdk_66"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_server_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yun_sdk_33"
            android:hint="" />
        <ImageView
            android:id="@+id/iv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_copy"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/yun_sdk_rl_top"
        android:gravity="left|center"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="工作时间:"
            android:textColor="@color/yun_sdk_66"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yun_sdk_33"
            android:hint="" />
    </LinearLayout>



</LinearLayout>
