<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
       Base application theme, dependent on API level. This theme is replaced
       by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

   -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="yun_sdk_AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="yun_sdk_dialog_bg_style" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="yun_sdk_customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    <style name="yun_sdk_FullscreenTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/yun_sdk_33</item>
        <item name="android:textColorHint">@color/yun_sdk_hint_textcolot</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_selected</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BtnCode">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">85dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/yun_sdk_33</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DivideStyle">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/yun_sdk_hint_textcolot</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/yun_sdk_33</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InputBgWhiteStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/yun_sdk_input_bg_white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="InputBgGreyStyle">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/yun_sdk_input_bg</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="InputIconStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="InputEtStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/yun_sdk_33</item>
        <item name="android:textColorHint">@color/yun_sdk_hint_textcolot</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="EditCancleStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/cancel</item>
    </style>

    <style name="ShowOrHideStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:src">@drawable/yun_sdk_sdk_biyan</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>